  "devDependencies": {
    "@tauri-apps/cli": "^2.9.4",
    "@types/node": "^24.10.1",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitejs/plugin-vue": "^6.0.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-oxlint": "^1.30.0",
    "eslint-plugin-vue": "^10.6.2",
    "oxlint": "^1.30.0",
    "prettier": "^3.7.3",
    "typescript": "^5.9.3",
